@{
    ViewData["Title"] = "Giriş Yap";
}
@model KayitGiris.Models.Kullanici

@section Scripts {
    <script>
        $(document).ready(function () {
            var message = '@TempData["GirisBilgisi"]';
            if (message && message !== "undefined") {
                alert(message);
            }
        });
    </script>
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title"> Giriş Yap </h3>
    </div>

    <div class="card-body align-items-center w-50">
        <form asp-action="Giris" method="post">
            TC : <input asp-for="TC" class="form-control" /> <br />
            Şifre : <input asp-for="Sifre" type="password" class="form-control" /> <br />
            <a asp-action="KullaniciKaydi">Kayıt Ol</a>
            <input type="submit" value="Giriş Yap" class="btn btn-primary" />
        </form>
    </div>
</div>
